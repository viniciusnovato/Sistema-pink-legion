{
  "version": 2,
  "builds": [
    {
      "src": "pdf_generator.py",
      "use": "@vercel/python"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/pdf_generator.py"
    },
    {
      "src": "/generate-pdf",
      "dest": "/pdf_generator.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "pdf_generator.py": {
      "runtime": "python3.9"
    }
  },
  "env": {
    "PYTHONPATH": "./"
  }
}